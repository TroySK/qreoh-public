<div class="row-fluid nested-fields">
  <div class="span2">
    <div class="color-picker">
      <a class="color"><div class="colorInner"></div></a>
      <div class="track"></div>
      <ul class="dropdown"><li></li></ul>
      <%= f.input :color, label: false, :input_html => { :data => { :required => true }, :type => 'hidden', :class => 'colorInput' } %>
    </div>
  </div>
  <div class="span5"><%= f.input :title, label: false, :as => :string, :input_html => { :data => { :required => true } } %></div>
  <div class="span3"><%= f.input :quantity, label: false, :as => :string, :input_html => { :placeholder => '0', :data => { :required => true, :type => "number" } } %></div>
  <div class="span2"><%= link_to_remove_association "Delete", f %></div>
</div>