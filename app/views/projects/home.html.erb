<div class="container container-carousel">
  <div id="carousel-homepage" class="carousel fade" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @showcase_designers.first(5).each_with_index do |designer, index| %>
      <li data-target="#carousel-homepage" data-slide-to="<%= index %>" class="<%= 'active' if index.zero? %>"></li>
      <% end %>
    </ol>
    <div class="carousel-inner" role="listbox">
      <% @showcase_designers.first(5).each_with_index do |designer, index| %>
      <div class="item<%= ' active' if index.zero? %>" style='<%= "background: url(#{cloudinary_url(designer.cover_photo.path, :width => 1200, :crop => :fit) }) no-repeat; background-size: cover; background-position: center 0;" if designer.cover_photo %>'>
        <div class="carousel-caption">
          <% unless designer.current_collection.blank? %>
          <h1><a href="<%= designer_url(designer) %>" class="text-block"><%= designer.current_collection %></a></h1>
          <% end %>
          <h2><a href="<%= designer_url(designer) %>" class="text-block"><%= designer.name %></a></h2>
          <p><a href="<%= designer_url(designer) %>" class="btn btn-primary">See the collection</a></p>
          <br>
        </div>
      </div>
      <% end %>
    </div>
    <a class="left carousel-control" href="#carousel-homepage" role="button" data-slide="prev">
      <i class="fa fa-angle-left fa-4x"></i>
    </a>
    <a class="right carousel-control" href="#carousel-homepage" role="button" data-slide="next">
      <i class="fa fa-angle-right fa-4x"></i>
    </a>
  </div>
</div>
