<% content_for :javascript_include do %>
  <%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/gsap/1.14.1/TweenMax.min.js", "jquery.scrollmagic.min.js" %>
<% end %>
<% content_for :javascript do %>
// Scolling animations
var controller = new ScrollMagic();
new ScrollScene({
  triggerElement: ".carousel-inner",
  duration: $(window).height()
})
.addTo(controller)
.triggerHook("onLeave")
.setTween(new TimelineMax().add([
  TweenMax.fromTo(".alt-header", 1, {background: "rgba(255, 255, 255, -2)", boxShadow: "0 0 3px rgba(0,0,0,-2)"}, {background: "rgba(255, 255, 255, 0.98)", boxShadow: "0 0 3px rgba(0,0,0,0.1)", ease: Linear.ease})
]));

new ScrollScene({
  triggerElement: ".carousel-inner",
  duration: 300
})
.addTo(controller)
.triggerHook("onLeave")
.setTween(new TimelineMax().add([
  TweenMax.fromTo("#carousel-homepage .item", 1, {backgroundPositionY: "0"}, {backgroundPositionY: ((window.innerHeight/3) + "px"), ease: Linear.easeNone}),
  TweenMax.fromTo("#carousel-homepage .carousel-control", 1, {top: "30%"}, {top: "80%", ease: Linear.easeNone})
]));

<% end %>
<% content_for :javascript_tracking do %>
if(typeof mixpanel !== 'undefined'){
  mixpanel.track("Viewed HomePage");
}
<% end %>