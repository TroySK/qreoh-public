<div class="container container-top">
  <h1 class="text-lg">Unlock Your Account</h1>
  <p>Something suspicious happened in your account and it was locked to prevent damage. Please enter your eMail and unlock your account.</p>
  <div class="row">
    <div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6 col-xs-offset-2 col-xs-8">
      <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <div class="panel panel-primary">
        <div class="panel-heading">Resend Confirmation</div>
        <div class="panel-body">
          <%= f.error_notification %>
          <%= f.full_error :unlock_token %>
          <%= f.input :email, autofocus: true %>
        </div>
        <div class="panel-footer">
          <%= f.button :submit, "Resend", :class => "btn btn-primary", :title => 'Press to get account unlock link'%>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>